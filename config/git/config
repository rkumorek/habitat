[core]
    editor = nvim
    pager = delta
[init]
    defaultBranch = master
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    side-by-side = true
    commit-style = normal
    minus-style = syntax
    minus-emph-style = reverse brightred
    minus-empty-line-marker-style = syntax
    plus-style = syntax
    plus-emph-style = reverse brightgreen
    plus-empty-line-marker-style = syntax
    whitespace-error-style = reverse magenta
    line-numbers-zero-style = normal
    line-numbers-plus-style = bold reverse brightgreen 
    line-numbers-minus-style = bold reverse brightred 
    commit-decoration-style = bold normal
    file-style = bold normal
    file-decoration-style = none
    file-modified-label = modified:
[merge]
    conflictStyle = zdiff3
    tool = nvimdiff
